#main
	padding 0 0 60px
	background-color: #141310
	background-image url(../img/backs/last-bg.jpg)
	background-repeat no-repeat
	background-position: top center
	background-size: cover
	text-align: center
	color #fff
	&.bonus-main
	&.remind
		min-height calc(100vh - 149px)
.pre
	font-size: 18px
	font-family: GL
.main-title
	margin: 5px 0 20px
	font-size: 36px
	font-family: GBk
	text-transform: uppercase
.main-info
	font-size: 20px
	font-family: GM
	span
		display: inline-block
.video-wrapper-main
	max-width 560px
	margin-top: 20px
.remind-main-title
	margin: 60px 0 40px
	background-color: transparent
	padding 0
	font-size: 30px
	display block
	a
		color #fff
		display: inline
		border-bottom: 2px dotted
		&:focus
			color #fff
		&:hover
			border-bottom: 0
			text-decoration: none
			color #fff
.remind-main-subtitle
	font-size: 24px
	margin 0
#feedback
	padding 50px 0
	min-height calc(100vh - 863px)
#vk
#fb
	overflow hidden
	border-radius: 0
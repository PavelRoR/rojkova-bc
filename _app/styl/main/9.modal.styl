.input-mail-modal
	display block
	max-width 260px
	margin: 0 auto 5px
.button.button-modal
	width 100%
	max-width 260px
.checking-modal .check-label
	line-height: 20px
.mail-modal-content
	.modal-body
		overflow hidden
		padding 0
.modal-col
	width 50%
	float left
	padding 30px
	&:first-of-type
		background-color: #625762
		background-image url(../img/backs/form-bg.jpg)
		background-repeat no-repeat
		background-position: center
		background-size: cover
.modal-main-title
	font-size: 36px
	font-family: GBk
	color #fff
	text-transform: uppercase
.modal-pre
	font-size: 18px
	color #fff
	text-transform: uppercase
	margin 30px 0 50px
.modal-main-info-text
	color #fff
	&&:last-of-type
		margin-top: 20px
	span
		display: inline-block
.modal-title
	text-align: center
	text-transform: uppercase
	font-size: 20px
	font-family: GBd
	margin-bottom: 20px
.switch-col
	height 484px
#author
	padding 50px 0
.author-img
	width 100%
	height 350px
	background-image url(../img/images/tatyana.jpg)
	background-repeat no-repeat
	background-position: top left
	background-size contain
	margin-bottom: 40px
.author-title
	text-transform: uppercase
	margin-bottom: 20px
	font-size: 25px
	font-family: GBd
	position relative
	&-1
		padding 30px 0 0 30px
		margin-top: 60px
		&:before
			content ''
			display: block
			position absolute
			top 0
			left 0
			border-top: 5px solid MB
			border-left: 5px solid MB
			width 170px
			height 100px

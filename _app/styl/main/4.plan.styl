#plan
	padding 50px 0 0
.day
	padding 310px 0 0
	width 100%
	max-width 370px
	margin 0 auto 40px
	background-repeat no-repeat
	background-position: top center
	background-size:  370px 285px
	&-1
		background-image url(../img/images/day-1-img.jpg)
	&-2
		background-image url(../img/images/day-2-img.jpg)
	&-3
		background-image url(../img/images/day-3-img.jpg)
	&-title
		padding 30px 0 0 30px
		font-size: 20px
		font-family: GBd
		margin-bottom: 30px
		text-transform: uppercase
		width 100%
		max-width 300px
		position relative
		span
			display: block
			font-family: GL
		&:before
			content: ''
			display block
			position absolute
			top 0
			left 0
			width 170px
			height 100px
			border-top: 5px solid MB
			border-left: 5px solid MB
	&-list
		margin 0 0 30px 30px
		list-style-position: inside
	&-bonus
		font-size: 18px
		font-family: GBd
		text-transform: uppercase
		span
			text-transform: none
			font-size: 16px
			font-family: G
			display: block
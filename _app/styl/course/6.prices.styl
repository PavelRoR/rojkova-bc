#prices
	padding 50px 0
	background-color: #0B1B2F
	background-image url(../img/backs/prices-bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	position relative
	&:before
		@extend #main:before
	.container
		@extend #main .container
.general-title-prices
	color #fff
.packet
	width 100%
	max-width 380px
	margin 0 auto 25px
	background-color: rgba(#fff,.95)
	padding 20px
.packet-head
	&-title
		font-size: 20px
		font-family: GBk
		color #0B1B2F
		text-transform: uppercase
.packet-body
	padding 20px 0
	min-height 233px
	&-title
		font-family: GBd
		font-size: 18px
		line-height: 1.2
		small
			display: block
			margin-top: 10px
.more-button
	cursor pointer
	font-size: 16px
	font-family: GM
	display: inline-block
	border-bottom: 1px dashed
	color #aaa
	transition: all .3s ease
	&:hover
		border-bottom-color: transparent
.cost
	font-size: 22px
	font-family: GM
	margin-bottom: 10px
	text-align: center
	text-transform: uppercase
	span
		display: block
		font-size: 28px
		font-family: GBk
	&-full
		span
			text-decoration: line-through
			&.unbroken
				text-decoration: none
	&-sale
		color red
	&-today
		color green
		margin-bottom: 20px
.prepayment
	text-align: center
	margin-bottom: 30px
	&-title
		font-size: 30px
		font-family: GBk
		text-transform: uppercase
		color red
	&-text
		font-size: 20px
		font-family: GM
		margin 10px 0 15px
		color #fff
.timer-title
	font-size: 30px
	font-family: GBk
	text-transform: uppercase
	color red
	text-align: center
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 20px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #fff
.flip-clock-wrapper ul li a div div.inn
	color: red
	background-color: #fff
	text-shadow: 2px 2px 2px rgba(#022a37,.6);
	border-radius: 0
.flip-clock-wrapper ul li a div.down
	border-radius: 0
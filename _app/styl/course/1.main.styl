#main
	position relative
	padding 0 0 70px
	background-color: #0E1127
	background-image url(../img/backs/main-bg.jpg)
	background-repeat no-repeat
	background-position:  center
	background-size: cover
	color #fff
	text-align: center
	&:before
		content: '';
		display: block;
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0,0,0,.4)
		// background-image: url("../img/icons/main-dots.png");
		z-index: 0;
	.container
		position: relative;
		z-index: 9;
.main-title
	font-size: 50px
	font-family: GBk
	margin 40px 0 35px
	line-height: 1
	text-transform: uppercase
	small
		display: block
		font-size: 18px
		font-family: G
.main-info
	font-size: 20px
	span
		display: inline-block
		font-family: GBd
	&:last-of-type
		margin 10px 0 50px
.button-main
	border: 2px solid #fff
@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.contact
		font-size: 18px
	.lets-img
		margin-top: 100px
@media screen and (max-width 1199px)
	.packet-body
		min-height 256px
@media screen and (max-width 991px)
	.module
		padding 300px 0 0 30px
	.lets-img
		display: none
	.packet-body
		min-height 316px
	.author-title-1
		margin-top: 0
	.author-img
		height 270px
	.last-title
		font-size: 40px
	.last-subtitle
		font-size: 26px
		margin 30px 0
@media screen and (max-width 767px)
	.header-logo
		display block
		width 100px
		height 44px
		float: none
		margin 0 auto 5px
	.contacts
		line-height: 1
		text-align: center
		float: none
	.about-text
		font-size: 18px
	.advantage-item
		margin-bottom: 40px
		padding 210px 0 0
	.packet-body
		min-height 1px
	.modal-dialog
		width auto
	.author-img
		height 400px
	.author-list
		margin-bottom: 30px
@media screen and (max-width 485px)
	#main
		padding 0 0 40px
	header
		margin-bottom: 10px
	.header-logo
		width 70px
		height 31px
	.main-title
		font-size: 36px
		margin 20px 0
	.main-info:last-of-type
		margin-bottom: 30px
	#about
		padding 30px 0 0
	#advantages
		padding 40px 0 0
	.general-title
		font-size: 23px
		margin-bottom: 30px
	.module
		padding 290px 20px 0 20px
		background-position: top 20px left 20px
		margin-bottom: 30px
	.module-title
		font-size: 24px
	.module-subtitle
		font-size: 18px
	.module-list li
	.lets-list li
		margin-bottom: 5px
	#lets
		padding 40px 0 30px
	#prices
	#author
		padding 40px 0
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	.timer-title
	.prepayment-title
		font-size: 26px
	.author-img
		height 360px
		margin-bottom: 20px
		background-position: top center
	.author-title
		font-size: 22px
		margin-bottom: 20px
		&-1
			padding 20px 0 0 20px
	.author-text
		margin-bottom: 10px
	.author-list
		margin 0 0 30px 20px
	#last
		padding 40px 0
	.last-title
		font-size: 30px
	.last-subtitle
		font-size: 22px
		margin 15px 0
	.last-text
		font-size: 18px
		margin-bottom: 30px
	footer
		padding 15px 0
		font-size: 12px
		h5
			font-size: 16px
		p
			font-size: 12px
	.soc-buttons a
		margin 10px 5px
@media screen and (max-width 385px)
	header
		padding 10px 0
		margin-bottom: 0
	.contact
		display: block
		margin-left: 0
		font-size: 14px
	.prepayment-title, .timer-title
		font-size: 22px
	.author-title
		font-size: 20px
		margin-bottom: 20px
	.last-title
		font-size: 24px
	.last-subtitle
		font-size: 18px
	.last-text
		font-size: 16px